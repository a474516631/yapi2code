{
  "name": "yapi-to-code",
  "displayName": "Yapi to Code",
  "version": "0.0.6",
  "description": "基于 YApi 生成 ts/dart/...",
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "Yapi",
    "Ts",
    "dart"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zhixiaoqiang/yapi2code.git"
  },
  "publisher": "zhixiaoqiang",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:all": "yarn build & yarn build:webview & yarn build:server",
    "build:server": "cd src/server && yarn build",
    "build:webview": "cd src/webview && yarn build",
    "commit": "git-cz",
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src --ext ts",
    "lint-fix": "eslint --fix './**/*.{js?(x),ts?(x),mjs}' --cache",
    "markdownlint-fix": "markdownlint-cli2-fix",
    "package": "vsce package",
    "prepare": "husky install",
    "pub": "vsce publish",
    "sort-package-json": "sort-package-json '**/package.json'",
    "start": "webpack --mode development --watch --devtool eval-source-map",
    "pretest": "pnpm compile-tests && pnpm compile && pnpm lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "rimraf dist && yarn build:all",
    "watch": "webpack --mode development --watch --devtool eval-source-map",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "contributes": {
    "commands": [
      {
        "command": "yapi.refresh",
        "title": "刷新接口",
        "icon": {
          "dark": "dist/assets/refresh-light.svg",
          "light": "dist/assets/refresh-dark.svg"
        }
      },
      {
        "command": "yapi.logout",
        "title": "退出登录"
      },
      {
        "command": "yapi.github",
        "title": "github",
        "icon": {
          "dark": "dist/assets/github-light.svg",
          "light": "dist/assets/github-dark.svg"
        }
      },
      {
        "command": "yapi.fixall",
        "title": "Yapi: 补充所有yapi接口类型"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "yapi-to-code-test",
      "properties": {
        "yapi.responseType": {
          "type": "string",
          "enum": [
            "methodGeneric"
          ],
          "default": "methodGeneric",
          "markdownDescription": "%ext.config.responseType%",
          "scope": "resource"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "yapi.refresh",
          "when": "tree.view.show && view == yapi.view",
          "group": "navigation"
        },
        {
          "command": "yapi.github",
          "when": "tree.view.show && view == yapi.view",
          "group": "navigation"
        },
        {
          "command": "yapi.logout",
          "when": "tree.view.show && view == yapi.view"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == typescript",
          "command": "yapi.fixall",
          "group": "yapi"
        }
      ]
    },
    "views": {
      "yapi-menu": [
        {
          "id": "yapi.view",
          "name": "yapi-menu",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yapi-menu",
          "title": "yapi to code",
          "icon": "dist/assets/icon.svg"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onView:yapi.view"
  ],
  "dependencies": {
    "axios": "^1.1.3",
    "cheerio": "^1.0.0-rc.12",
    "copy-webpack-plugin": "^11.0.0",
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@modern-js/inspector-webpack-plugin": "^1.0.5",
    "@swc/core": "^1.3.14",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vscode/test-electron": "^2.2.0",
    "commitizen": "4.2.5",
    "conventional-changelog-cli": "2.2.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.12.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "markdownlint-cli2": "0.5.1",
    "mocha": "^10.1.0",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "1.57.0",
    "speed-measure-webpack-plugin": "^1.5.0",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.6",
    "thread-loader": "^3.0.4",
    "typescript": "^4.8.4",
    "vsce": "^2.14.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "dist/assets/logo.png"
}
